 <body class="col-5">
    <h3>Updated Employee Details</h3><br>
  <form action="/updateemp?id=<%=id%>" method="post">
    <div>
      <% for(var i=0;i<employee.length; i++) { %>
      <div>
        Fullname: <input type="text" class="form-group"  placeholder="Enter Name" name="fullName"  value="<%=employee[i].fullName%>"><br><br>
      </div>
      <div>
        Email: <input type="email"  class="form-group" id="email" placeholder="Enter Email" name="email"  value="<%=employee[i].email%>"><br><br>
      </div>
      <div>
      Password: <input type="password" class="form-group" id="pwd" placeholder="Enter Password" name="password"  value="<%=employee[i].password %>"><br><br>  
      </div>
      <div>
        Phone Number: <input type="number"  class="form-group" id="ephone" placeholder="Enter PhoneNumber" name="phoneNumber"  value="<%=employee[i].phoneNumber%>"><br><br> 
      </div>
      <div>
        Join Date: <input type="date" id="jdate" name="joinDate" value="<%=`${new Date(employee[i].joinDate).getDate()}/${new Date(employee[i].joinDate).getMonth()+1}/${new Date(employee[i].joinDate).getFullYear()} `%>"><br><br>
