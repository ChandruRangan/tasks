<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>
  <body class="col-5">
    <h3>Project Details</h3>
    <form action="http://localhost:3444/project" method="POST">
        <div>
            <div>
                ProjectName:<input type="text" class="form-group" id="pname" placeholder="Enter Project Name" name="pname"><br><br>
            </div>
            <div>
                ProjectLead:<select class="form-group" name="lname">
                    <option>Enter Project Lead</option>
                    <% for(var i=0; i<employee.length; i++){%>
                        <option value="<%= employee[i].fullName%>"><%=employee[i].fullName%></option>

                    <%}%>
                </select>

                <!-- <input type="text" class="form-group" id="lname" placeholder="Enter Name" name="lname"><br><br> -->
            </div>
            <div>
                TeamMember1:<select class="form-group" name="tmname1">
                    <option>Enter Employee Name</option>
                    <% for(var i=0; i<employee.length; i++){%>
                        <option value="<%= employee[i].fullName%>"><%=employee[i].fullName%></option>

                    <%}%>
                </select>
                <!-- <input type="text" class="form-group" id="tmname1" placeholder="Team Members" name="tmname1"><br><br> -->
            </div>
            <div>
                TeamMember2:<select class="form-group" name="tmname2">
                    <option>Enter Employee Name</option>
                    <% for(var i=0; i<employee.length; i++){%>
                        <option value="<%= employee[i].fullName%>"><%=employee[i].fullName%></option>

                    <%}%>
                </select>    
                <!-- <input type="text" class="form-group" id="tmname1" placeholder="Team Members" name="tmname2"><br><br> -->
            </div>
            <div>
                TeamMember3:<select class="form-group" name="tmname3">
                    <option>Enter Employee Name</option>
                    <% for(var i=0; i<employee.length; i++){%>
                        <option value="<%= employee[i].fullName%>"><%=employee[i].fullName%></option>

                    <%}%>
                </select>    
                <!-- <input type="text" class="form-group" id="tmname1" placeholder="Team Members" name="tmname3"><br><br> -->
            </div>
            <div>
                Project StartDate:<input type="date" class="form-group" id="date" placeholder="MM/DD/YYYY" name="sdate"><br><br>
            </div>
            <div>
                Project EndDate:<input type="date" class="form-group" id="date" placeholder="MM/DD/YYYY" name="edate"><br><br>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-success">SUMBIT</button>
        <!-- <a  href="/empTable" class="btn btn-outline-dark">EmployeeTable</a> -->
        <a  href="/proTable" class="btn btn-outline-dark">ProjectTable</a>
        <a href="/" class="btn btn-outline-info">Add Employee</a>
    </form>    
  </body>
</html>
