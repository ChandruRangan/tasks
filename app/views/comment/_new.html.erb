<%= form_with model: Comment.new do |form| %>
   
  
    <div class="">
      <%= form.text_field :comment, class:"input"%>
   
      <%= form.text_field :user_id, id: :user_id,type: :hidden,  value:current_user.id %>
      <%= form.text_field :post_id, id: :post_id, type: :hidden,  value: post_val %>
    </div>
  
    <div>
      <%= form.submit "comment", class:"btn mt-2 btn-success", placeholder:"Enter your comment"%>
    </div>
  <% end %>