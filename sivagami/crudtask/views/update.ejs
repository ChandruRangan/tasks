<!doctype html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>
    <body class="bg-info">
      <div class="container mt-5">
        <form action="/updatenext?id=<%=id%>" method="post">
                <div class="form-group">  
                  <% for(var i = 0; i <data.length; i++){ %>
                    product_name <input class="form-control"  type="text" name="pn" placeholder="Product Name" value="<%=data[i].product_name%>">
                    <%}%>
                </div>
                 <div class="form-group">
                     Category<select class="form-control"  name="category" value="<%=data[0].category%>">
                          <% for(var i = 0; i <category.length; i++){ %>
                              <option value="<%= category[i].category_id%>"><%=category[i].categoryname%></option>
                              <%}%>
                            </select>
                        </div>
                        <div class="form-group">
                          <% for(var i = 0; i <data.length; i++){ %>
                            Price <input class="form-control"  type="text" name="price" placeholder="Price" value="<%=data[i].price%>">
                            <%}%>
                         </div>
                         <div class="container text-center">
                             <button class="btn btn-dark" type="submit" name="search">Update</button>
                        </div>


                        
        </form>
        </div>
      </div>   
    </body>
</html>