<head>
  <!-- Bootstrap CSS -->
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
    crossorigin="anonymous"
  />
</head>
<body>
    <div class="container mt-5">
        <h3>Products</h3>
        <form action="/insert" autocomplete="off" method="post">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Enter Product Name" name="pname">
            </div>
            <div class="form-group">
              <select name="catid" id="" class="form-control">
                <option>Select Category Name</option>
                <%for(var i=0 ;i<cat.length; i++) { %>
                  <option value="<%=cat[i].category_id%>"><%=cat[i].category_name%></option>
                  <%}%>
                </select>
              </div>
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Enter Price" name="price">
              </div>
                <input type="submit" class="btn btn-primary">
            </div>
          </form>
        </div>

        <div class="container-fluid mt-5">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search here...">
          <a href="" class="btn btn-dark mt-2">Search</a>
        </div>
          <table class="table table-dark table-borderd">
            <thead>
            <tr>
              <th>Product Id</th>
              <th>Product Name</th>
              <th>Price</th>
              <th>Created At</th>
            </tr> 
          </thead>
          <tbody>
            <%for(var i=0;i<product.length;i++){%>
            <tr>
              <td><%=product[i].product_id%></td>
              <td><%=product[i].product_name%></td>
              <td><%=product[i].price%></td>
              <td><%=product[i].created_at%></td>
              <td><a href="/update" class="btn btn-secondary">Update</a></td>
            </tr>
            <%}%>
          </tbody>
        </table>
      </div>
</body>