<%-include('style.ejs')%>
<body>
    <div class="container mt-5">
        <h3 class="alert alert-danger text-center">Update Products</h3>
        <form action="/updatedata?id=<%=id%>" autocomplete="off" method="post">
          <div class="form-group">
            <%for(var i=0 ;i<data.length; i++) { %>
            <input type="text" class="form-control" placeholder="Enter Product Name" name="pname" value="<%=data[i].product_name%>">
            <%}%>
        </div>
            <div class="form-group">
              <select name="catid"  class="form-control">
                <%for(var i=0 ;i<data.length; i++) { %>
                  <option value="<%=data[i].category_id%>" selected><%=cat[data[0].category_id-1].category_name%></option>
                <%}%>
               <%for(var i=0 ;i<cat.length; i++) { %>
                 <%if(cat[data[0].category_id-1].category_name==cat[i].category_name){ continue;}%>
                <option value="<%=cat[i].category_id%>"><%=cat[i].category_name%></option>
                <%}%>
                </select>
              </div>
              <div class="form-group">
                <%for(var i=0 ;i<data.length; i++) { %>
                <input type="text" class="form-control" placeholder="Enter Price" name="price" value="<%=data[i].price%>">
                <%}%>
            </div>
                <input type="submit" class="btn btn-primary" value="Update">
            </div>
          </form>
        </div>
</body>