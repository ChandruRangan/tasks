<%-include('style.ejs')%>
<div class="container-fluid mt-5">
    <h3 class="alert alert-success text-center">Products List</h3>
    <a href="/insert" class="btn btn-primary">Add New Product</a>
    <form action="/find" autocomplete="off" method="post">
        <div class="form-group mt-3">
            <select name="catname" id="" class="form-control">
                <option>Select Category Name</option>
                <%for(var i=0 ;i<cat.length; i++) { %>
                  <option value="<%=cat[i].category_name%>"><%=cat[i].category_name%></option>
                  <%}%>
                </select>
            <input type="submit" class="btn btn-dark mt-2" placeholder="Search">
        </div>
    </form>
    <table class="table table-dark table-borderd table-striped">
        <thead>
        <tr>
      <th>Product Id <a href="/pidasc?pid=product_id" class="btn btn-outline-info btn-sm">A</a></th>
      <th>Product Name <a href="/pnasc?pn=product_name" class="btn btn-outline-info btn-sm">A</a></th>
      <th>Price <a href="/priceasc?price=price" class="btn btn-outline-info btn-sm">A</a></th>
      <th>category name <a href="/catasc?cat=category_name" class="btn btn-outline-info btn-sm">A</a></th>
      <th>Created At</th>
      <th>Updated At</th>
      <th class="text-center" colspan="2">Action</th>
    </tr> 
</thead>
  <tbody>
    <%for(var i=0;i<product.length;i++){%>
        <tr>
            <td><%=product[i].product_id%></td>
            <td><%=product[i].product_name%></td>
            <td><%=product[i].price%></td>
            <td><%=product[i].category_name%></td>
            <td><%=product[i].created_at%></td>
            <td><%=product[i].updated_at%></td>
            <td><a href="/update?id=<%=product[i].product_id%>" class="btn btn-outline-success">Update</a></td>
            <td><a href="/delete?id=<%=product[i].product_id%>" class="btn btn-outline-danger">Delete</a></td>
        </tr>
        <%}%>
    </tbody>
</table>
</div>