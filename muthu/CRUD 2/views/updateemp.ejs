<%-include('style.ejs')%>
<body>
      <div class="container" style="margin-top: 70px;">
                    <div class="col-md-12 container alert alert-success"> 
                     <h4>Update Employee</h4> 
                     <hr>        
                     </div>
               <div class="col-md-6 jumbotron" >
                <form action="/updatedemp" autocomplete="off" method="post">
                        <div class="form-group">
                            <label for="fullname"  class="control-label">Full Name</label>
                            <input type="text" style="display: none;" name="id" value="<%=emp[0].employee_id%>">
                            <input type="text" value="<%=emp[0].fullname%>" name="fullname" id="fname" class="form-control" placeholder="Enter Full Name">
                        </div>
                        <div class="form-group">
                            <label for="email" class="control-label">Email</label>
                            <input type="email" value="<%=emp[0].email%>" id="email" name="email" class="form-control" placeholder="Enter Email Id">
                        </div>
                        <div class="form-group">
                            <label for="password" class="control-label">Password</label>
                            <input type="password"  value="<%=emp[0].password%>" id="password" name="password" class="form-control" placeholder="Enter password">
                      </div>
                      <div class="form-group">
                            <label for="phone" class="control-label">Phone Number</label>
                            <input type="number"  value="<%=emp[0].phone_number%>" name="phone" id="phone" class="form-control" placeholder="Enter Phone Number">
                      </div>  
                      <div class="form-group">
                           <label for="doj" class="control-label">Joining Date</label>
                           <input type="date" name="doj"  value="<%=emp[0].joiningdate%>" id="doj" class="form-control" placeholder="Enter Joining Date">
                      </div>
                      <div class="form-group">
                            <label for="dob" class="control-label">Date Of Birth</label>
                            <input type="date" default="<%=emp[0].date_of_birth%>" name="dob" value="<%=emp[0].date_of_birth%>" id="dob" class="form-control" placeholder="Enter Date of Birth">
                      </div>
                           <input type="submit" class="btn btn-info">
                           <a href="/display" class="btn btn-info">View</a>
                    </form>
              
            </div>
</div>
</body>