<%-include('style.ejs')%>
<body>
   
<div class="container-fluid mt-5">
    <form action="/search" method="post">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Search here..." id="input" name="input">
             <input type="submit" class="btn btn-success" >
         </div>
     </form>
    
    
<table class="table table-dark table-borderd table-striped">
    <thead>
    <tr>
      <th>Employee Name</th>
      <th>Mail_ID</th>
      <th>Mobile_No</th>
      <th>Date_Of_Joining</th>
      <th>Date_Of_Birth</th>
      <th>action</th>
    </tr>
</thead>
  <tbody>
    <%for(var i=0;i<employee.length;i++){%>
        <tr>
           
            <td><%=employee[i].Name%></td>
            <td><%=employee[i].mail%></td>
            <td><%=employee[i].Phno%></td>
            <td><%=employee[i].JoiningDate%></td>
            <td><%=employee[i].dob%></td>
            <td><a href="/update" class="btn btn-success">Update</a></td>
            <td><a href="/delete?emp_id=<%=employee[i]._id%>" class="btn btn-danger">Delete</a></td>
        </tr>
        <%}%>
    </tbody>
</table>
<div class="text-center">
    <a class="btn btn-info" href="/">Back</a>
</div>
</div>
<div class="container-fluid mt-5">
    <form action="/search" autocomplete="off" method="post">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Search here..." name="input">
            <input type="submit" class="btn btn-dark mt-2" placeholder="Search">
        </div>
    </form>

</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    function empsearch(){
        var name = document.getElementById('input').value
        console.log(name)
        $.ajax({
        type: "POST",
        url: "/search",
        dataType: "json",
        data: {
           empname:name
        }
       });
    }
</script>
</body>
